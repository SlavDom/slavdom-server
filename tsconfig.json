{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "es5",
    "noEmitOnError": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "strict": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es5",
      "es2015.promise"
    ]
  },
  "include": [
    "./server/src/**/*",
    "./server/__tests__/**/*"
  ]
}